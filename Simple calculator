#include<stdio.h>
int main(){
     int a, b;
     char c;
     printf("Enter 1st number, operator and 2nd number:\n");
    scanf("%d %c %d", &a, &c, &b);
    switch(c){
        case '+':
            printf("%d", a+b);
            break;
            case '-':
            printf("%d", a-b);
            break;
            case '*':
            printf("%d", a*b);
            break;
            case '/':
            printf("%.2f", (float)a/b);
            break;
             default:
                printf("Invalid Operation\n");

                }
                return 0;

                }
